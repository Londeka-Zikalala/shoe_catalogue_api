<nav>
    <a href="#catalogue-selection">Pick By Size And Brand</a> 
    <div class="store-name">
        <h1>Kicks By Lubabalo<span></span></h1> 
    </div>
    <a href="#shoe-list">Available</a>
    <div class="stock-page"> <a href="/stock-update/shoes">Stock Update</a></div>
</nav>
<div class="header">

</div>

<section id="catalogue-selection">
<div class="catalogue-selection">

  {{#if messages.error}}
<div class="flash-error">
    {{messages.error}}
</div>
{{/if}}

{{#if messages.info}}
<div class="flash-success">
    {{messages.info}}
</div>
{{/if}}

<form action="/shoes/brand/{{brandName}}/size/{{shoeSize}}">
  <label for="chooseshoe">Pick A Shoe</label>
        <select id="brand" name="brand" value="{{brandName}}">
            <option value="">Select A Brand</option>
            <option value="Nike">Nike</option>
            <option value="Adidas">Adidas</option>
            <option value="Puma">Puma</option>
            <option value="Reebok">Reebok</option>
        </select>

         <select id="size" name="size" value="{{shoeSize}}">
            <option value="">Pick A Size</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
            <option value="9">9</option>
        </select>

         <button class="sizeButton" type="submit">Show</button>

</form>
</div>
</section>
<section id="shoe-list">
<form action="/shoes" method="GET">
    <div class="shoe-list">
   {{#each allInStore}}
        <ul>
            <div class="images">
                <img src="{{this.image_url}}" alt="Shoe Image">
            </div>
            <div class="details">
            <li>Id:{{this.id}}</li>
            <li>Brand:{{this.brand}}</li>
            <li>Size:{{this.size}}</li>
            <li>Color:{{this.color}}</li>
            <li>Price: R{{this.price}}</li>
            <li>In Stock:{{this.in_stock}}</li>
            </div>
           
        </ul>
        {{/each}}
    </div>
     
     

</form>

   </section>
   <script>
    // error messages display for 3.5seconds
    let errorMessageElem = document.querySelector('.flash-error')
  
    setTimeout(()=>{
      errorMessageElem.style.display = 'none'

    },3500)
//scuccess messages display for 3.5 seconds
let successMessageElem = document.querySelector('.flash-success')

    setTimeout(()=>{
      successMessageElem.style.display = 'none'

    }, 3500)


  </script>