<nav>
    <a href="#add-shoe">Add A Shoe</a>
    <a href="#remove-shoe">Remove A Shoe</a>
    <div class="home"><a href="/">Home</a></div>
</nav>
<section id="add-shoe">
  <div class="add-content">
<h1>Add A New Shoe</h1>
<form action="/stock-update/shoes" method="POST">
  <label for="color">Color:</label><br>
  <input type="text" id="color" name="color" value="{{shoeColor}}"><br>
  <label for="brand">Brand:</label><br>
  <input type="text" id="brand" name="brand" value="{{brandName}}"><br>
  <label for="price">Price:</label><br>
  <input type="number" id="price" name="price" value="{{shoePrice}}"><br>
  <label for="size">Size:</label><br>
  <input type="number" id="size" name="size" value="{{shoeSize}}"><br>
  <label for="in_stock">In Stock:</label><br>
  <input type="number" id="in_stock" name="in_stock" value="{{inStock}}"><br>
   <label for="image_url">Image URL</label><br>
  <input type="url" id="image_url" name="image_url" value="{{imageURL}}"><br>
  <input class="addSubmit" type="submit" value="Add Shoe">
</form>

  {{#if messages.error}}
<div class="flash-error">
    {{messages.error}}
</div>
{{/if}}

{{#if messages.success}}
<div class="flash-success">
    {{messages.success}}
</div>
{{/if}}
</div>
</section>

<section id="remove-shoe">
  <div class="remove-content">
    {{#if messages.error}}
<div class="flash-error">
    {{messages.error}}
</div>
{{/if}}

{{#if messages.success}}
<div class="flash-success">
    {{messages.success}}
</div>
{{/if}}
<h1 class="remove">Remove A Shoe</h1>

<form action="/stock-update/shoes/sold" method="POST">
  <input type="number" name="id" value="{{shoeId}}">
  <button class="removeSubmit" type="submit" class="removeShoeBtn">Remove</button>
</form>

</div>
</section>

<script>
    // error messages display for 3.5seconds
    let errorMessageElem = document.querySelector('.flash-error')
  
    setTimeout(()=>{
      errorMessageElem.style.display = 'none'

    },3500)
//scuccess messages display for 3.5 seconds
let successMessageElem = document.querySelector('.flash-success')

    setTimeout(()=>{
      successMessageElem.style.display = 'none'

    }, 3500)


  </script>